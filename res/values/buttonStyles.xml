<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:shadowColor">@color/button_text_shaddow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="iButton" parent="Button">
        <item name="android:textColor">@color/i_button_text</item>
        <item name="android:shadowColor">@color/i_button_text_shaddow</item>
    </style>

    <style name="ButtonStatus" parent="Button">
        <item name="android:textSize">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="submit_button" parent="Button">
        <item name="android:textSize">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="ButtonSmall" parent="Button">
        <item name="android:textSize">16dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="ButtonLarge" parent="Button">
        <item name="android:textSize">36dp</item>
    </style>

    <style name="ButtonSmall1" parent="Button">
        <item name="android:textSize">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="iButtonSmall1" parent="Button">
        <item name="android:textColor">@color/i_button_text</item>
        <item name="android:shadowColor">@color/i_button_text_shaddow</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="ButtonSmall2" parent="Button">
        <item name="android:textColor">@color/i_button_text</item>
        <item name="android:shadowColor">@color/i_button_text_shaddow</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="iButtonSmall" parent="ButtonSmall">
        <item name="android:textColor">#000</item>
        <item name="android:shadowColor">#FFF</item>
    </style>

    <style name="DashboardButton" parent="Button">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/dashboard_button_text</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">@drawable/bg_dashboard_btn</item>
    </style>

    <style name="LabelButton" parent="Button">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">#ff29549f</item>
        <item name="android:background">#FFF</item>
        <item name="android:shadowColor">#FFF</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="LabelButton1" parent="LabelButton">
        <item name="android:textSize">18dp</item>
        <item name="android:padding">0dp</item>
    </style>

</resources>