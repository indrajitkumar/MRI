<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"><shape>
            <solid android:color="#778" />
            <corners android:radius="4dp" />
            <padding android:bottom="0dp" android:left="6dp" android:right="6dp" android:top="0dp" />
        </shape></item>
    <item android:state_enabled="false"><shape>
            <solid android:color="@color/disabled_button" />
            <corners android:radius="4dp" />
            <padding android:bottom="0dp" android:left="6dp" android:right="6dp" android:top="0dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="90" android:endColor="#222" android:startColor="#222"  android:centerColor="#222"/>
            <corners android:radius="4dp" />
            <padding android:bottom="0dp" android:left="6dp" android:right="6dp" android:top="0dp" />
        </shape></item>
</selector>