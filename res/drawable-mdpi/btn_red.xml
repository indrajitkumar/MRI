<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"><shape>
            <solid android:color="#877" />
            <padding android:bottom="0dp" android:left="6dp" android:right="6dp" android:top="0dp" />
        </shape></item>
    <item android:state_enabled="false"><shape>
            <solid android:color="#877" />
            <padding android:bottom="0dp" android:left="6dp" android:right="6dp" android:top="0dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:startColor="#AC2222" android:endColor="#983333" />
            <padding android:bottom="0dp" android:left="6dp" android:right="6dp" android:top="0dp" />
        </shape></item>

</selector>