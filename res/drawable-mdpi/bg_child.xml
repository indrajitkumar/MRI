<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- touch down -->
    <item android:drawable="@drawable/list_selector_pressed" android:state_pressed="true"/>

    <!-- selected -->
    <item android:drawable="@drawable/list_selector_selected" android:state_selected="true"/>

    <!-- default -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#cfcfcf" />
            <size android:height="1dip" android:width="1dip" />
        </shape></item>
</selector>